<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:textColor">#262626</item>

    </style>

    <style name="match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--基础控件-->
    <style name="base_text" parent="@style/wrap_wrap">

    </style>

    <style name="base_img" parent="@style/wrap_wrap">

    </style>



    <style name="select_log_out" parent="@style/match_wrap">
        <item name="android:layout_marginRight">@dimen/login_padding</item>
        <item name="android:layout_marginLeft">@dimen/login_padding</item>
        <item name="android:background">@drawable/select_log_out</item>
        <item name="android:textColor">@color/select_log_out</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:layout_marginTop">@dimen/size_30</item>
    </style>

    <!--wheelview-->
    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/list_divider</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/list_divider</item>
    </style>

    <style name="anim_push_bottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>


    <style name="register_btn" parent="match_wrap">
        <item name="android:layout_marginRight">@dimen/login_padding</item>
        <item name="android:layout_marginLeft">@dimen/login_padding</item>
        <item name="android:background">@drawable/selector_reg_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>


</resources>

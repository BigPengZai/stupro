<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:keepScreenOn="true"
             android:background="@color/c33"
>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:orientation="horizontal">
        <!--上课  比例 横 3.5-->
        <LinearLayout
            android:id="@+id/ll_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <io.agore.openvcall.ui.TeacherVideoView
                android:id="@+id/grid_video_view_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"/>

            <ViewStub
                android:id="@id/small_video_view_dock"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:inflatedId="@id/small_video_view_dock"
                android:layout="@layout/small_video_view_dock"/>
        </LinearLayout>
        <!--白版  比例 横 5-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">
            <!--白版-->
            <com.onlyhiedu.mobile.Widget.MyScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_course_ware"
                        android:layout_width="936px"
                        android:layout_height="697px"/>

                    <com.onlyhiedu.mobile.Widget.draw.DrawView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/draw_view"
                        android:layout_width="936px"
                        android:layout_height="697px"
                        android:background="@android:color/transparent"
                        app:dv_draw_alpha="255"
                        app:dv_draw_anti_alias="true"
                        app:dv_draw_color="@color/colorAccent"
                        app:dv_draw_corners="round"
                        app:dv_draw_dither="true"
                        app:dv_draw_font_family="default_font"
                        app:dv_draw_font_size="12"
                        app:dv_draw_mode="draw"
                        app:dv_draw_style="stroke"
                        app:dv_draw_tool="pen"
                        app:dv_draw_width="1"/>
                </FrameLayout>

            </com.onlyhiedu.mobile.Widget.MyScrollView>
        </LinearLayout>

        <!-- IM   比例 横 4-->
        <LinearLayout
            android:id="@+id/ll_msg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_weight="3"
            android:background="#80000000"
            android:orientation="vertical"
            android:visibility="gone"
        >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/msg_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:transcriptMode="normal"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:maxLines="2"
                    android:scrollbars="vertical"/>

                <TextView
                    android:id="@+id/tv_send"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:background="@color/c_D8D8D8"
                    android:gravity="center"
                    android:text="发送"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/image_full_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:padding="@dimen/size_12"
        android:src="@mipmap/ic_full_screen"
    />
    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-50dp"
        android:background="?attr/colorPrimary"
        android:elevation="@dimen/elevation"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:textColor="@color/c_F42440"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="/"
                android:textColor="@color/c_F42440"/>

            <TextView
                android:id="@+id/tv_total_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_7"
                android:text="01:00:00"/>

            <TextView
                android:id="@+id/but_dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_log_out"
                android:paddingBottom="@dimen/size_7"
                android:paddingLeft="@dimen/size_18"
                android:paddingRight="@dimen/size_18"
                android:paddingTop="@dimen/size_7"
                android:text="我要下课"
                android:textColor="@color/select_log_out"
                android:textSize="@dimen/size_16"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/but_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15"
                    android:background="@drawable/im_text_bg"
                    android:paddingBottom="@dimen/size_7"
                    android:paddingLeft="@dimen/size_18"
                    android:paddingRight="@dimen/size_18"
                    android:paddingTop="@dimen/size_7"
                    android:text="聊天"
                    android:textColor="@color/im_text_color"
                    android:textSize="@dimen/size_16"
                    android:visibility="invisible"/>

                <View
                    android:id="@+id/im_point"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="75dp"
                    android:background="@drawable/im_oval"
                    android:visibility="gone"/>

            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/iv_loading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</FrameLayout>

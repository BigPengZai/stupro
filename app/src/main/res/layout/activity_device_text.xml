<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/root"
              android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>

    <Button android:id="@+id/btn_audio" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="音频检测"/>

    <Button android:id="@+id/btn_network" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="网络检测"/>

    <Button android:id="@+id/btn_video" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="视频检测"/>



</LinearLayout>
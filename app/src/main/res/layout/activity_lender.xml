<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>


    <EditText android:id="@+id/edit_name" android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <EditText android:id="@+id/edit_phone" android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <Button android:id="@+id/btn_confirm" android:layout_width="match_parent" android:text="GO"
            android:layout_height="wrap_content"/>
</LinearLayout>
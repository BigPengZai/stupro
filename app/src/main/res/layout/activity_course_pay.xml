<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ecdemo="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="?attr/actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="请输入优惠码： "/>

                <!--优惠码-->
                <EditText
                    android:id="@+id/coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="优惠码"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="number"/>
            </LinearLayout>


            <TextView
                android:id="@+id/subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="小计："
                android:textSize="21sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="优惠："
                android:textSize="21sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="赠送： 金牌班主任服务"
                android:textSize="21sp"/>
            <!--年级和科目-->
            <LinearLayout
                android:id="@+id/gradeSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <com.onlyhiedu.mobile.Widget.SettingItemView
                    android:id="@+id/setting_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    ecdemo:item_showDivider="true"
                    ecdemo:item_titleText="年级"/>


                <com.onlyhiedu.mobile.Widget.SettingItemView
                    android:id="@+id/setting_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    ecdemo:item_showDivider="true"
                    ecdemo:item_titleText="科目"/>
            </LinearLayout>
            <!--支付方式-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="支付方式"
                android:textSize="23sp"/>
            <RadioGroup
                android:id="@+id/pay_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="15dp">
                <RadioButton
                    android:id="@+id/alipayButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:button="@null"
                    android:drawableLeft="@mipmap/icon_alipay"
                    android:drawablePadding="15dp"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:text="支付宝支付"
                    android:textSize="19sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="?android:attr/listDivider"/>
                <RadioButton
                    android:id="@+id/wechatButton"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:paddingLeft="30dp"
                    android:text="微信支付"
                    android:textSize="19sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="?android:attr/listDivider"/>
                <RadioButton
                    android:id="@+id/upmpButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:paddingLeft="30dp"
                    android:text="银联支付"
                    android:textSize="19sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="?android:attr/listDivider"/>
                <RadioButton
                    android:id="@+id/bfbButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:paddingLeft="30dp"
                    android:text="百度分期"
                    android:textSize="19sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="?android:attr/listDivider"/>
                <RadioButton
                    android:id="@+id/offline"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:paddingLeft="30dp"
                    android:text="线下转账"
                    android:textSize="19sp"/>
            </RadioGroup>
            <!--线下转账-->
            <TextView
                android:id="@+id/tv_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账线下转账"
                android:textSize="21sp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/confirm_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/c9"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="21sp"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ecdemo="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:background="@color/c_F2F2F2"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@mipmap/bg_user_home"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/head_portrait"/>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"/>
    </LinearLayout>

    <!--info-->
    <com.onlyhiedu.mobile.Widget.SettingItemView
        android:id="@+id/setting_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        ecdemo:item_showDivider="true"
        ecdemo:item_titleText="姓名"/>

    <com.onlyhiedu.mobile.Widget.SettingItemView
        android:id="@+id/setting_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ecdemo:item_showDivider="true"
        ecdemo:item_titleText="性別"/>

    <com.onlyhiedu.mobile.Widget.SettingItemView
        android:id="@+id/setting_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ecdemo:item_showDivider="true"
        ecdemo:item_titleText="年级"/>

    <com.onlyhiedu.mobile.Widget.SettingItemView
        android:id="@+id/setting_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ecdemo:item_showDivider="false"
        ecdemo:item_titleText="高考所在地"/>

    <com.onlyhiedu.mobile.Widget.SettingItemView
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        ecdemo:item_showDivider="false"
        ecdemo:item_titleText="设置"/>

